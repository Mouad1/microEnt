{
  "name": "activity-report-generator",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "nx serve",
    "build": "nx build",
    "watch": "nx build --watch --configuration development",
    "test": "nx test",
    "docker:build": "docker build -t activity-report-generator .",
    "docker:run": "docker run -p 8080:80 activity-report-generator",
    "docker:dev": "docker-compose --profile dev up activity-report-dev",
    "docker:prod": "docker-compose up activity-report-app",
    "docker:stop": "docker-compose down",
    "docker:build-and-push": "npm run docker:build-for-registry && npm run docker:push",
    "docker:build-for-registry": "docker build -t $npm_config_registry/activity-report-generator:latest -t $npm_config_registry/activity-report-generator:$npm_package_version .",
    "docker:push": "docker push $npm_config_registry/activity-report-generator:latest && docker push $npm_config_registry/activity-report-generator:$npm_package_version",
    "docker:login": "docker login"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.0.0",
    "@angular/common": "^19.0.0",
    "@angular/compiler": "^19.0.0",
    "@angular/core": "^19.0.0",
    "@angular/forms": "^19.0.0",
    "@angular/platform-browser": "^19.0.0",
    "@angular/platform-browser-dynamic": "^19.0.0",
    "@angular/router": "^19.0.0",
    "jspdf": "^3.0.1",
    "jspdf-autotable": "^5.0.2",
    "rxjs": "~7.8.1",
    "tslib": "^2.6.2",
    "xlsx": "^0.18.5",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.0.0",
    "@angular-devkit/core": "^19.0.0",
    "@angular-devkit/schematics": "^19.0.0",
    "@angular/cli": "^19.0.0",
    "@angular/compiler-cli": "^19.0.0",
    "@nx/angular": "21.3.11",
    "@nx/workspace": "21.3.11",
    "@schematics/angular": "^19.0.0",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@types/jasmine": "~5.1.4",
    "@types/node": "^20.11.0",
    "autoprefixer": "^10.4.21",
    "jasmine-core": "~5.1.1",
    "karma": "~6.4.2",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "nx": "21.3.11",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.5.0"
  }
}
